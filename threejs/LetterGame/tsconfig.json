{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "paths": {
      "*": [
          "./node_modules/*",
          "./src/typings/*" // this will make the typescript compiler find the type file
      ]
    }
  }
}